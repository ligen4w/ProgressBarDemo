<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.lg.progressbardemo.view.CircleWaveView
        android:id="@+id/wcv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:centerRadius="5dp"
        app:centerColor="@android:color/white"
        app:circleColorWcv="@android:color/white"
        app:maxCircleRadius="23dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bg_trans_black"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_wcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="run"/>
</LinearLayout>
